{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "color-hex-case": "lower",
    "unit-case": "lower",
    "property-case": "lower",
    "indentation": ["2", {
      "indentInsideParens": "twice"
    }],
    "function-parentheses-newline-inside": null,
    "shorthand-property-no-redundant-values": true,
    "at-rule-no-vendor-prefix": false,
    "property-no-vendor-prefix": false,
    "selector-no-vendor-prefix": false,
    "value-no-vendor-prefix": false,
    "value-list-comma-newline-after": "never",
    "declaration-colon-newline-after": "never",
    "font-family-name-quotes": "always",
    "number-leading-zero": "always",
    "length-zero-no-unit": true,
    "at-rule-no-unknown": false,
    "scss/at-rule-no-unknown": true
  }
}
