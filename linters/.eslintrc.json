{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true
    }
  }, 

  "rules": {
    "no-plusplus": "off",
    "prefer-template": "off",
    "quotes": ["error", "double"],
    "comma-dangle": ["error", "never"]
  }
}
